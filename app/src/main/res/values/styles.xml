<resources>

    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowBackground">@color/common_color_fcfcfc</item>
        <item name="@android:actionBarStyle">@style/ActionBarStyle.Default</item>
    </style>

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
        Theme customizations available in newer API levels can go in
        res/values-vXX/styles.xml, while customizations related to
        backward-compatibility can go here.
        -->
    </style>

    <style name="ActionBarStyle.Default" parent="@android:style/Widget.ActionBar">
        <item name="android:displayOptions">showCustom</item>
        <item name="android:background">@color/common_color_0072d6</item>
        <item name="android:titleTextStyle">@style/ActionBarStyle</item>
        <item name="android:height">48dp</item>
    </style>

    <style name="ActionBarStyle">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">21sp</item>
        <!-- <item name="android:paddingLeft">22dp</item> -->
    </style>

    <style name="DialogInfoTextStyle">
        <item name="android:textColor">#1A1A1A</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="DialogDetailTextStyle">
        <item name="android:textColor">#1A1A1A</item>
        <item name="android:textSize">13sp</item>
    </style>
</resources>
